mentors = ["გიორგი", "ნინო", "ლევან", "მარიამ"]  # მენტორების სახელების საწყისი სია
mentor_list = []  # ახალი მენტორების სია
regular_names = []  # ჩვეულებრივი სახელების სია

# მომხმარებელს შემოატანინეთ სახელი
name = input("შეიყვანეთ სახელი: ")

# შევამოწმოთ არის თუ არა ეს სახელი მენტორების სიაში
if name in mentors:
    mentor_list.append(name)
else:
    regular_names.append(name)

# დაბეჭდეთ შედეგები
print("მენტორების სია:", mentor_list)
print("ჩვეულებრივი სახელების სია:", regular_names)
